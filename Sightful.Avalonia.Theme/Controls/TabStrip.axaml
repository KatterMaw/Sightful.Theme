<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia">
	<Design.PreviewWith>
		<Border Background="{DynamicResource OuterBackground}">
			<TabStrip>
				<TabStripItem Content="{icons:MaterialIconExt Puzzle}"/>
				<TabStripItem Content="{icons:MaterialIconExt Home}" IsSelected="True"/>
				<TabStripItem Content="{icons:MaterialIconExt Cog}"/>
			</TabStrip>
		</Border>
	</Design.PreviewWith>
	<ControlTheme x:Key="{x:Type TabStrip}" TargetType="TabStrip">
		<Setter Property="ClipToBounds" Value="False"/>
		<Setter Property="Margin" Value="12"/>
		<Setter Property="ItemsPanel">
			<ItemsPanelTemplate>
				<StackPanel Orientation="Vertical" Spacing="8"/>
			</ItemsPanelTemplate>
		</Setter>
		<Setter Property="Template">
			<ControlTemplate>
				<Border Background="{TemplateBinding Background}"
				        BorderBrush="{TemplateBinding BorderBrush}"
				        BorderThickness="{TemplateBinding BorderThickness}"
				        CornerRadius="{TemplateBinding CornerRadius}"
				        Padding="{TemplateBinding Padding}">
					<ItemsPresenter Name="PART_ItemsPresenter"
					                ItemsPanel="{TemplateBinding ItemsPanel}" />
				</Border>
			</ControlTemplate>
		</Setter>
	</ControlTheme>
</ResourceDictionary>
