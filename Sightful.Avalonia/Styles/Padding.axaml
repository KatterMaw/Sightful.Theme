<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style Selector="Border.regular-padding">
		<Setter Property="Padding" Value="16"/>
	</Style>
	<Style Selector="ContentPresenter.regular-padding">
		<Setter Property="Padding" Value="16"/>
	</Style>
	<Style Selector="ScrollViewer.regular-padding">
		<Setter Property="Padding" Value="16"/>
	</Style>

	<Style Selector="Border.wide-padding">
		<Setter Property="Padding" Value="24"/>
	</Style>

	<Style Selector="ContentPresenter.wide-padding">
		<Setter Property="Padding" Value="24"/>
	</Style>

	<Style Selector="ScrollViewer.wide-padding">
		<Setter Property="Padding" Value="24"/>
	</Style>

</Styles>