<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Sightful.Avalonia.Demo.App"
             xmlns:local="using:Sightful.Avalonia.Demo"
             xmlns:sightful="clr-namespace:Avalonia.Themes.Sightful;assembly=Sightful.Avalonia.Theme"
             RequestedThemeVariant="Dark">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <sightful:DefaultTheme/>
    </Application.Styles>
</Application>